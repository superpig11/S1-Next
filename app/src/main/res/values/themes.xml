<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- show contextual action bar -->
        <item name="windowActionModeOverlay">true</item>

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="myCardView">@style/LightCardView</item>
        <item name="mySpinnerItemTextColor">?android:textColorPrimary</item>

        <item name="linkBackground">@drawable/link_pressed_light</item>

        <item name="emoticonKeyboardColor">@color/emoticon_keyboard_background_color_light</item>
        <item name="emoticonKeyboardTabsBackground">@color/emoticon_keyboard_tab_background_color_light</item>
        <item name="emoticonKeyboardTabsTitleColor">@color/emoticon_keyboard_tab_title_light</item>

        <item name="menuCross">@drawable/ic_menu_close_black_24dp</item>
        <item name="menuPersonAdd">@drawable/ic_menu_person_add_black_24dp</item>
        <item name="menuThreadAttachment">@drawable/ic_menu_attachment_black_24dp</item>
        <item name="menuPageTurning">@drawable/selector_menu_swap_horiz_black</item>
        <item name="menuEmoticon">@drawable/ic_menu_insert_emoticon_black_24dp</item>
        <item name="menuKeyboard">@drawable/ic_menu_keyboard_black_24dp</item>
        <item name="menuSend">@drawable/selector_menu_send_black</item>

        <item name="iconHome">@drawable/ic_home_grey600_24dp</item>
        <item name="iconFavourites">@drawable/ic_grade_grey600_24dp</item>
        <item name="iconSettings">@drawable/ic_settings_grey600_24dp</item>
    </style>

    <style name="LightTheme.Inverse">
        <item name="actionModeBackground">?attr/colorPrimary</item>

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="mySpinnerItemTextColor">?android:textColorPrimaryInverse</item>

        <item name="menuCross">@drawable/ic_menu_close_white_24dp</item>
        <item name="menuPersonAdd">@drawable/ic_menu_person_add_white_24dp</item>
        <item name="menuThreadAttachment">@drawable/ic_menu_attachment_white_24dp</item>
        <item name="menuPageTurning">@drawable/selector_menu_swap_horiz_white</item>
        <item name="menuEmoticon">@drawable/ic_menu_insert_emoticon_white_24dp</item>
        <item name="menuKeyboard">@drawable/ic_menu_keyboard_white_24dp</item>
        <item name="menuSend">@drawable/selector_menu_send_white</item>
    </style>

    <style name="LightTheme.Inverse.Amber">
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/amber_700</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="LightTheme.Inverse.Green">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="LightTheme.Inverse.LightBlue">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorAccent">@color/pink_A200</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/teal_200_70</item>
        <item name="android:textColorPrimary">@drawable/my_abc_primary_text_material_dark</item>
        <item name="android:textColorLink">@color/teal_200_70</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="myCardView">@style/DarkCardView</item>
        <item name="mySpinnerItemTextColor">?android:textColorPrimary</item>
        <item name="linkBackground">@drawable/link_pressed_dark</item>
        <item name="emoticonKeyboardColor">@color/emoticon_keyboard_background_color_dark</item>
        <item name="emoticonKeyboardTabsBackground">@color/emoticon_keyboard_tab_background_color_dark</item>
        <item name="emoticonKeyboardTabsTitleColor">@color/emoticon_keyboard_tab_title_dark</item>
        <item name="menuCross">@drawable/ic_menu_close_white_24dp</item>
        <item name="menuPersonAdd">@drawable/ic_menu_person_add_white_24dp</item>
        <item name="menuPageTurning">@drawable/selector_menu_swap_horiz_white</item>
        <item name="menuThreadAttachment">@drawable/ic_menu_attachment_white_24dp</item>
        <item name="menuEmoticon">@drawable/ic_menu_insert_emoticon_white_24dp</item>
        <item name="menuKeyboard">@drawable/ic_menu_keyboard_white_24dp</item>
        <item name="menuSend">@drawable/selector_menu_send_white</item>
        <item name="iconHome">@drawable/ic_home_white_24dp</item>
        <item name="iconFavourites">@drawable/ic_grade_white_24dp</item>
        <item name="iconSettings">@drawable/ic_settings_white_24dp</item>
    </style>

    <style name="TranslucentTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- from Theme.Translucent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TranslucentTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="GalleryTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>

        <item name="menuCross">@drawable/ic_menu_close_white_24dp</item>
    </style>

</resources>
